{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "es",
    "jsx": "react",
    "module": "es6",
    "target": "es5",
    "lib": ["es5", "dom"],
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@sensoro-design/react": ["src/index.ts"],
      "@sensoro-design/react/icon": ["icon"],
      "@sensoro-design/react/es/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "src/**/*.test.tsx", "src/**/*.test.ts", "src/**/*.demo.tsx"]
}
